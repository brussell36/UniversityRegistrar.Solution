@{
  Layout = "_Layout";
}

@model Registrar.Models.Student

<h2>Edit</h2>

<h4>Edit this student: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.Label("Select course")
    @Html.DropDownList("CourseId")

    @Html.Label("Check if completed")
    @Html.CheckBoxFor(model => model.Completed)
    <input type="submit" value="Save" class="btn btn-outline-dark" />
}

<p>@Html.ActionLink("Back to student list", "Index")</p>