@{
  Layout = "_Layout";
}

@model Registrar.Models.Course

<h4>Add a new course</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.CourseName)
    @Html.TextBoxFor(model => model.CourseName, new {@class="form-control"})

    @Html.Label("Select department")
    @Html.DropDownList("DepartmentId")
    <input type="submit" value="Add new course" class="btn btn-outline-dark" />
}
<p>@Html.ActionLink("Show all courses", "Index")</p>