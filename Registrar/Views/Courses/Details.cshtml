@{
  Layout = "_Layout";
}

@model Registrar.Models.Course;


<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.CourseName): @Html.DisplayFor(model => model.CourseName)</h3>
<h3>Department: </h3>


@if(@Model.StudentsDepartments.Count == 0)
{
  <p>This course does not contain any students</p>
}
else
{
  <h4>Students this course contains:</h4>
  <ul>
  @foreach(var join in Model.StudentsDepartments)
  {
    <li>@Html.ActionLink(@join.Student.Name, "Details", "Students", new { id = join.StudentId })</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add student to this course", "Create", "Students")</p>
<p>@Html.ActionLink("Back to courses", "Index")</p>
<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })</p>